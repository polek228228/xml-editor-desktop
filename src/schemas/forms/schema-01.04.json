{
  "version": "01.04",
  "title": "Пояснительная записка к проектной документации (схема 01.04)",
  "description": "Переходная схема Минстроя РФ для пояснительных записок (до марта 2025)",
  "sections": [
    {
      "id": "general_info",
      "title": "1. Общие сведения",
      "required": true,
      "description": "Основная информация о проекте и участниках",
      "fields": [
        {
          "name": "project_title",
          "label": "Наименование объекта капитального строительства",
          "type": "textarea",
          "required": true,
          "maxLength": 450,
          "placeholder": "Введите полное наименование объекта строительства",
          "tooltip": "Указывается полное наименование объекта в соответствии с заданием на проектирование (схема 01.04)",
          "validation": {
            "required": true,
            "maxLength": 450,
            "minLength": 10,
            "message": "Наименование объекта обязательно и должно содержать от 10 до 450 символов"
          },
          "xmlPath": "GeneralInfo/ProjectTitle"
        },
        {
          "name": "project_code",
          "label": "Номер (шифр) проекта",
          "type": "text",
          "required": false,
          "maxLength": 45,
          "placeholder": "123-45-ГП",
          "tooltip": "Номер или шифр проектной документации (схема 01.04)",
          "validation": {
            "maxLength": 45,
            "pattern": "^[A-Za-zА-Яа-я0-9\\-\\/\\.\\s]+$",
            "message": "Номер проекта может содержать буквы, цифры, дефисы, слеши и точки"
          },
          "xmlPath": "GeneralInfo/ProjectCode"
        },
        {
          "name": "developer_name",
          "label": "Наименование организации-разработчика",
          "type": "text",
          "required": true,
          "maxLength": 280,
          "placeholder": "ООО «Проектная организация»",
          "tooltip": "Полное наименование организации, выполняющей проектирование (схема 01.04)",
          "validation": {
            "required": true,
            "maxLength": 280,
            "minLength": 5,
            "message": "Наименование организации обязательно (от 5 до 280 символов)"
          },
          "xmlPath": "GeneralInfo/DeveloperName"
        }
      ]
    },
    {
      "id": "object_info",
      "title": "2. Сведения об объекте",
      "required": true,
      "description": "Характеристики объекта строительства",
      "fields": [
        {
          "name": "construction_type",
          "label": "Тип строительства",
          "type": "select",
          "required": true,
          "options": [
            {"value": "new", "label": "Новое строительство"},
            {"value": "reconstruction", "label": "Реконструкция"},
            {"value": "extension", "label": "Расширение"},
            {"value": "technical_reequipment", "label": "Техническое перевооружение"}
          ],
          "tooltip": "Выберите тип строительства (схема 01.04)",
          "validation": {
            "required": true,
            "message": "Тип строительства обязателен для выбора"
          },
          "xmlPath": "ObjectInfo/ConstructionType"
        },
        {
          "name": "building_floors",
          "label": "Количество этажей",
          "type": "number",
          "required": false,
          "min": 1,
          "max": 100,
          "placeholder": "5",
          "tooltip": "Укажите количество этажей здания (схема 01.04)",
          "validation": {
            "min": 1,
            "max": 100,
            "message": "Количество этажей должно быть от 1 до 100"
          },
          "xmlPath": "ObjectInfo/BuildingFloors"
        }
      ]
    }
  ]
}