/**
 * @file main.css
 * @description Main stylesheet for XML Editor Desktop v3.0
 * @methodology BEM (Block Element Modifier)
 * @design-system Cupertino Clean - Inspired by iOS 17 / macOS Sonoma
 * @updated October 2025
 */

/* ==================== CSS VARIABLES ==================== */
:root {
  /* ==================== LAYOUT DIMENSIONS (Adaptive System) ==================== */
  /* Activity Bar (left-most vertical navigation) */
  --layout-activity-bar-width: 48px;

  /* Sidebar (dynamic content area) */
  --layout-sidebar-width: 220px;
  --layout-sidebar-margin-left: 8px; /* Gap between ActivityBar and Sidebar */

  /* Gap between Sidebar and Main Content */
  --layout-content-gap: 16px; /* ⬅️ ИСПРАВЛЕНО: стандартный gap 16px (--space-4) */

  /* Calculated offsets - Direct values for Electron compatibility */
  --layout-sidebar-left: 48px; /* Activity Bar width */
  --layout-content-start: 293px; /* 48 + 8 + 220 + 1 + 16 = 293px */

  /* ==================== SPACING SCALE ==================== */
  --space-1: 4px;     /* 0.25rem */
  --space-2: 8px;     /* 0.5rem */
  --space-3: 12px;    /* 0.75rem */
  --space-4: 16px;    /* 1rem */
  --space-5: 20px;    /* 1.25rem */
  --space-6: 24px;    /* 1.5rem */
  --space-8: 32px;    /* 2rem */
  --space-10: 40px;   /* 2.5rem */
  --space-12: 48px;   /* 3rem */
  --space-16: 64px;   /* 4rem */
  --space-20: 80px;   /* 5rem */

  /* ==================== COLOR PALETTE ==================== */

  /* Blue (Primary) */
  --blue-50: #eff6ff;
  --blue-100: #dbeafe;
  --blue-200: #bfdbfe;
  --blue-300: #93c5fd;
  --blue-400: #60a5fa;
  --blue-500: #3b82f6;
  --blue-600: #2563eb;
  --blue-700: #1d4ed8;
  --blue-800: #1e40af;
  --blue-900: #1e3a8a;

  /* Teal (Success) */
  --teal-400: #2dd4bf;
  --teal-500: #14b8a6;
  --teal-600: #0d9488;

  /* Rose (Danger) */
  --rose-400: #fb7185;
  --rose-500: #f43f5e;
  --rose-600: #e11d48;

  /* Amber (Warning) */
  --amber-400: #fbbf24;
  --amber-500: #f59e0b;
  --amber-600: #d97706;

  /* Neutral (Warm Gray) */
  --neutral-50: #fafaf9;
  --neutral-100: #f5f5f4;
  --neutral-200: #e7e5e4;
  --neutral-300: #d6d3d1;
  --neutral-400: #a8a29e;
  --neutral-500: #78716c;
  --neutral-600: #57534e;
  --neutral-700: #44403c;
  --neutral-800: #292524;
  --neutral-900: #1c1917;

  /* Semantic Colors */
  --color-primary: var(--blue-500);
  --color-primary-hover: var(--blue-600);
  --color-primary-active: var(--blue-700);
  --color-primary-light: var(--blue-100);

  --color-secondary: var(--neutral-600);
  --color-secondary-hover: var(--neutral-700);

  --color-success: var(--teal-500);
  --color-success-light: var(--teal-400);

  --color-warning: var(--amber-500);
  --color-warning-light: var(--amber-400);

  --color-danger: var(--rose-500);
  --color-danger-light: var(--rose-400);

  /* Backgrounds */
  --color-bg-base: var(--neutral-50);
  --color-bg-elevated: #ffffff;
  --color-bg-secondary: var(--neutral-100);
  --color-surface: rgba(255, 255, 255, 0.8);
  --color-surface-glass: rgba(255, 255, 255, 0.72);
  --color-surface-hover: rgba(255, 255, 255, 0.9);

  /* Text */
  --color-text-primary: var(--neutral-900);
  --color-text-secondary: var(--neutral-600);
  --color-text-tertiary: var(--neutral-400);
  --color-text-inverse: #ffffff;

  /* Borders */
  --color-border: var(--neutral-200);
  --color-border-strong: var(--neutral-300);
  --color-border-glass: rgba(255, 255, 255, 0.18);

  /* Legacy aliases for backward compatibility */
  --color-bg: var(--color-bg-base);
  --color-text: var(--color-text-primary);
  --color-text-light: var(--color-text-tertiary);

  /* ==================== TYPOGRAPHY ==================== */

  /* Font Families */
  --font-display: 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-text: 'SF Pro Text', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-mono: 'SF Mono', 'Menlo', 'Monaco', 'Courier New', monospace;
  --font-family: var(--font-text); /* Legacy alias */

  /* Font Sizes */
  --font-xs: 11px;    /* 0.6875rem */
  --font-sm: 13px;    /* 0.8125rem */
  --font-base: 15px;  /* 0.9375rem - iOS default */
  --font-lg: 17px;    /* 1.0625rem */
  --font-xl: 22px;    /* 1.375rem */
  --font-2xl: 28px;   /* 1.75rem */
  --font-3xl: 34px;   /* 2.125rem */
  --font-4xl: 48px;   /* 3rem */

  /* Legacy aliases */
  --font-size-xs: var(--font-xs);
  --font-size-sm: var(--font-sm);
  --font-size-base: var(--font-base);
  --font-size-lg: var(--font-lg);
  --font-size-xl: var(--font-xl);
  --font-size-2xl: var(--font-2xl);
  --font-size-3xl: var(--font-3xl);

  /* Font Weights */
  --weight-light: 300;
  --weight-regular: 400;
  --weight-medium: 500;
  --weight-semibold: 600;
  --weight-bold: 700;

  /* Line Heights */
  --leading-tight: 1.25;
  --leading-normal: 1.5;
  --leading-relaxed: 1.75;
  --leading-loose: 2;

  /* ==================== BORDERS & RADIUS ==================== */

  /* Border Radius */
  --radius-xs: 6px;
  --radius-sm: 8px;
  --radius-md: 12px;
  --radius-lg: 16px;
  --radius-xl: 20px;
  --radius-2xl: 24px;
  --radius-full: 9999px;

  /* Legacy aliases */
  --border-radius: var(--radius-md);
  --border-radius-lg: var(--radius-lg);

  /* Border Widths */
  --border-thin: 1px;
  --border-medium: 2px;
  --border-thick: 4px;
  --border-width: var(--border-thin); /* Legacy alias */

  /* ==================== SHADOWS (5-LEVEL DEPTH) ==================== */

  /* Level 0: Flat */
  --shadow-none: none;

  /* Level 1: Slightly raised */
  --shadow-xs: 0 1px 2px rgba(0, 0, 0, 0.04),
               0 1px 1px rgba(0, 0, 0, 0.06);

  /* Level 2: Floating (cards) */
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08),
               0 1px 4px rgba(0, 0, 0, 0.08);

  /* Level 3: Elevated (active cards) */
  --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.12),
               0 2px 8px rgba(0, 0, 0, 0.08);

  /* Level 4: High elevation (modals) */
  --shadow-lg: 0 12px 40px rgba(0, 0, 0, 0.16),
               0 6px 20px rgba(0, 0, 0, 0.12);

  /* Level 5: Maximum (tooltips) */
  --shadow-xl: 0 20px 64px rgba(0, 0, 0, 0.20),
               0 10px 32px rgba(0, 0, 0, 0.16);

  /* Colored shadows for emphasis */
  --shadow-primary: 0 4px 16px rgba(59, 130, 246, 0.24);
  --shadow-success: 0 4px 16px rgba(20, 184, 166, 0.24);
  --shadow-danger: 0 4px 16px rgba(244, 63, 94, 0.24);

  /* ==================== ANIMATIONS ==================== */

  /* Durations */
  --duration-instant: 100ms;
  --duration-fast: 200ms;
  --duration-normal: 300ms;
  --duration-slow: 500ms;
  --duration-slower: 700ms;

  /* iOS-style Easing Functions */
  --ease-linear: linear;
  --ease-in: cubic-bezier(0.42, 0, 1, 1);
  --ease-out: cubic-bezier(0, 0, 0.58, 1);
  --ease-in-out: cubic-bezier(0.42, 0, 0.58, 1);

  /* Custom spring easing */
  --ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1);
  --ease-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);
  --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);
  --ease-emphasized: cubic-bezier(0.05, 0.7, 0.1, 1.0);

  /* Legacy alias */
  --transition: all var(--duration-fast) var(--ease-smooth);

  /* ==================== Z-INDEX LAYERS ==================== */
  --z-base: 1;
  --z-dropdown: 100;
  --z-sticky: 200;
  --z-fixed: 300;
  --z-modal-backdrop: 400;
  --z-modal: 500;
  --z-popover: 600;
  --z-tooltip: 700;

  /* ==================== BLUR & EFFECTS ==================== */
  --blur-sm: 8px;
  --blur-md: 16px;
  --blur-lg: 24px;
  --blur-xl: 40px;

  /* Legacy spacing aliases */
  --spacing-xs: var(--space-1);
  --spacing-sm: var(--space-2);
  --spacing-md: var(--space-4);
  --spacing-lg: var(--space-6);
  --spacing-xl: var(--space-8);
  --spacing-2xl: var(--space-12);
}

/* ==================== RESET & BASE STYLES ==================== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  font-size: 15px; /* iOS standard base font size */
  height: 100%;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  font-family: var(--font-family);
  font-size: var(--font-base);
  font-weight: var(--weight-regular);
  line-height: var(--leading-normal);
  color: var(--color-text-primary);
  background-color: var(--color-bg-base);
  height: 100%;
  display: flex;
  flex-direction: column;
  /* iOS-style text rendering */
  text-rendering: optimizeLegibility;
  -webkit-tap-highlight-color: transparent;
}

/* ==================== HEADER (Minimalist) ==================== */
.header {
  background-color: var(--color-surface);
  border-bottom: var(--border-width) solid var(--color-border);
  padding: var(--spacing-sm) var(--spacing-xl);
  flex-shrink: 0;
  height: 50px;
  display: flex;
  align-items: center;
}

.header__container {
  display: flex;
  align-items: center;
  gap: var(--spacing-xl);
  width: 100%;
}

.header__title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--color-primary);
  margin: 0;
}

.header__breadcrumb {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.header__breadcrumb-text {
  font-weight: 500;
}

/* ==================== BUTTONS ==================== */
/* ==================== BUTTONS (iOS-inspired) ==================== */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  padding: var(--space-2) var(--space-4);
  font-family: var(--font-text);
  font-size: var(--font-sm);
  font-weight: var(--weight-medium);
  line-height: var(--leading-tight);
  border: var(--border-thin) solid transparent;
  border-radius: var(--radius-lg); /* Modern 16px rounded corners */
  cursor: pointer;
  background-color: var(--color-bg-elevated);
  color: var(--color-text-primary);
  box-shadow: var(--shadow-xs);
  /* iOS-style spring animation */
  transition: all var(--duration-fast) var(--ease-smooth),
              transform var(--duration-fast) var(--ease-spring);
  user-select: none;
  -webkit-user-select: none;
}

.btn:hover:not(:disabled) {
  transform: scale(1.02);
  box-shadow: var(--shadow-sm);
}

.btn:active:not(:disabled) {
  transform: scale(0.96); /* Spring press effect */
  box-shadow: var(--shadow-xs);
  transition-duration: var(--duration-instant);
}

.btn:disabled {
  opacity: 0.4;
  cursor: not-allowed;
  box-shadow: none;
}

/* Primary button (iOS blue) */
.btn--primary {
  background-color: var(--color-primary);
  color: var(--color-text-inverse);
  border-color: var(--color-primary);
  box-shadow: var(--shadow-primary);
}

.btn--primary:hover:not(:disabled) {
  background-color: var(--color-primary-hover);
  border-color: var(--color-primary-hover);
}

.btn--primary:active:not(:disabled) {
  background-color: var(--color-primary-active);
}

/* Secondary button */
.btn--secondary {
  background-color: var(--color-secondary);
  color: var(--color-text-inverse);
  border-color: var(--color-secondary);
}

.btn--secondary:hover:not(:disabled) {
  background-color: var(--color-secondary-hover);
  border-color: var(--color-secondary-hover);
}

/* Success button */
.btn--accent,
.btn--success {
  background-color: var(--color-success);
  color: var(--color-text-inverse);
  border-color: var(--color-success);
  box-shadow: var(--shadow-success);
}

.btn--accent:hover:not(:disabled),
.btn--success:hover:not(:disabled) {
  background-color: var(--teal-600);
  border-color: var(--teal-600);
}

/* Warning button */
.btn--warning {
  background-color: var(--color-warning);
  color: var(--color-text-inverse);
  border-color: var(--color-warning);
}

.btn--warning:hover:not(:disabled) {
  background-color: var(--amber-600);
  border-color: var(--amber-600);
}

/* Danger button */
.btn--danger {
  background-color: var(--color-danger);
  color: var(--color-text-inverse);
  border-color: var(--color-danger);
  box-shadow: var(--shadow-danger);
}

.btn--danger:hover:not(:disabled) {
  background-color: var(--rose-600);
  border-color: var(--rose-600);
}

/* Outlined button */
.btn--outline {
  background-color: transparent;
  border-color: var(--color-border-strong);
  color: var(--color-text-primary);
  box-shadow: none;
}

.btn--outline:hover:not(:disabled) {
  background-color: var(--color-bg-secondary);
  border-color: var(--color-primary);
  color: var(--color-primary);
}

/* Ghost button */
.btn--ghost {
  background-color: transparent;
  border-color: transparent;
  color: var(--color-text-secondary);
  box-shadow: none;
}

.btn--ghost:hover:not(:disabled) {
  background-color: var(--color-bg-secondary);
  color: var(--color-text-primary);
}

/* Size variants */
.btn--sm {
  padding: var(--space-1) var(--space-3);
  font-size: var(--font-xs);
  border-radius: var(--radius-md);
}

.btn--large,
.btn--lg {
  padding: var(--space-3) var(--space-6);
  font-size: var(--font-base);
  border-radius: var(--radius-xl);
}

.btn--xl {
  padding: var(--space-4) var(--space-8);
  font-size: var(--font-lg);
  border-radius: var(--radius-xl);
}

/* Full width */
.btn--block {
  width: 100%;
  justify-content: center;
}

/* Icon in button */
.btn__icon {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
}

.btn--sm .btn__icon {
  width: 14px;
  height: 14px;
}

.btn--lg .btn__icon,
.btn--large .btn__icon {
  width: 18px;
  height: 18px;
}

/* ==================== MAIN CONTAINER ==================== */
.main-container {
  display: flex;
  flex: 1;
}

/* ==================== NAVIGATION BAR (Left Vertical) ==================== */
.navbar {
  width: 80px;
  background-color: var(--color-surface);
  border-right: var(--border-width) solid var(--color-border);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-md) 0;
  flex-shrink: 0;
  z-index: 100;
}

.navbar__item {
  width: 64px;
  height: 64px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm);
  margin-bottom: var(--spacing-xs);
  border: none;
  background-color: transparent;
  color: var(--color-text-secondary);
  cursor: pointer;
  transition: var(--transition);
  border-radius: var(--border-radius);
  position: relative;
}

.navbar__item:hover:not(:disabled) {
  background-color: var(--color-bg-secondary);
  color: var(--color-primary);
}

.navbar__item--active {
  color: var(--color-primary);
  background-color: var(--color-bg);
}

.navbar__item--active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 3px;
  height: 60%;
  background-color: var(--color-primary);
  border-radius: 0 3px 3px 0;
}

.navbar__item--disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

.navbar__item--disabled:hover {
  background-color: transparent;
  color: var(--color-text-secondary);
}

.navbar__icon {
  font-size: 1.5rem;
  line-height: 1;
}

.navbar__label {
  font-size: var(--font-size-xs);
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
}

.navbar__spacer {
  flex: 1;
}

/* ==================== SIDEBAR (Dynamic) ==================== */
/* ==================== SIDEBAR (Glassmorphic iOS style) ==================== */
.sidebar {
  position: fixed;
  left: var(--layout-sidebar-left); /* 48px - от переменной */
  top: 64px; /* App nav height + gap */
  bottom: 52px; /* ✅ Footer height (~36px) + gap (16px) = 52px */
  width: var(--layout-sidebar-width);
  /* Glassmorphic effect */
  background-color: var(--color-surface-glass); /* Semi-transparent */
  backdrop-filter: blur(var(--blur-lg)); /* 24px blur - frosted glass! */
  -webkit-backdrop-filter: blur(var(--blur-lg));
  border: var(--border-thin) solid var(--color-border-glass);
  border-radius: var(--radius-xl); /* 20px rounded corners */
  margin-left: var(--layout-sidebar-margin-left);
  box-shadow: var(--shadow-md); /* Floating shadow */
  overflow: hidden;
  display: flex;
  flex-direction: column;
  z-index: 90;
  /* Smooth transition */
  transition: all var(--duration-normal) var(--ease-smooth);
}

.sidebar:hover {
  box-shadow: var(--shadow-lg); /* Deeper shadow on hover */
}

.sidebar__section {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow-y: auto; /* Scrollable content */
  /* Fade in animation */
  opacity: 0;
  transition: opacity var(--duration-normal) var(--ease-smooth);
  /* Custom scrollbar (webkit) */
  scrollbar-width: thin;
  scrollbar-color: var(--color-border) transparent;
}

.sidebar__section--active {
  opacity: 1;
}

/* Home sidebar visible by default (fix for initial load) */
#sidebar-home {
  opacity: 1;
}

.sidebar__section::-webkit-scrollbar {
  width: 8px;
}

.sidebar__section::-webkit-scrollbar-track {
  background: transparent;
}

.sidebar__section::-webkit-scrollbar-thumb {
  background-color: var(--color-border);
  border-radius: var(--radius-full);
  border: 2px solid transparent;
  background-clip: content-box;
}

.sidebar__section::-webkit-scrollbar-thumb:hover {
  background-color: var(--color-border-strong);
}

.sidebar__header {
  padding: var(--space-6) var(--space-2) var(--space-6) var(--space-6); /* top right bottom left - minimal right padding */
  border-bottom: var(--border-thin) solid var(--color-border);
  flex-shrink: 0;
}

.sidebar__title {
  font-size: var(--font-lg); /* 17px iOS standard */
  font-weight: var(--weight-semibold);
  color: var(--color-text-primary);
  margin: 0;
  line-height: var(--leading-tight);
}

.sidebar__content {
  flex: 1;
  padding: var(--space-3) var(--space-2) var(--space-3) var(--space-4); /* top right bottom left - minimal right padding */
  overflow-y: auto;
}

.sidebar__actions {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  margin-bottom: var(--space-6);
}

.sidebar__search {
  margin-bottom: var(--space-6);
}

.sidebar__search-input {
  width: 100%;
  padding: var(--space-3) var(--space-4); /* 12px 16px */
  border: var(--border-thin) solid var(--color-border);
  border-radius: var(--radius-lg); /* 16px rounded */
  font-size: var(--font-sm);
  font-family: var(--font-text);
  background-color: var(--color-bg-elevated);
  color: var(--color-text-primary);
  transition: all var(--duration-fast) var(--ease-smooth);
}

.sidebar__search-input::placeholder {
  color: var(--color-text-tertiary);
}

.sidebar__search-input:hover {
  border-color: var(--color-border-strong);
}

.sidebar__search-input:focus {
  outline: none;
  border-color: var(--color-primary);
  background-color: #ffffff;
  box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
}

.sidebar__group {
  margin-bottom: var(--space-8); /* 32px generous gap */
}

.sidebar__group-title {
  font-size: var(--font-xs); /* 11px iOS standard */
  font-weight: var(--weight-semibold);
  text-transform: uppercase;
  color: var(--color-text-secondary);
  letter-spacing: 0.08em; /* Wider tracking */
  margin-bottom: var(--space-3);
  padding: 0 var(--space-2);
}

.sidebar__list {
  display: flex;
  flex-direction: column;
  gap: var(--space-1); /* Tight gap */
}

.sidebar__list-item {
  display: flex;
  align-items: center;
  gap: var(--space-3); /* 12px icon-text gap */
  padding: var(--space-3) var(--space-2) var(--space-3) var(--space-4); /* top right bottom left - compact */
  border: none;
  background-color: transparent;
  color: var(--color-text-primary);
  font-size: var(--font-sm);
  font-weight: var(--weight-regular);
  text-align: left;
  cursor: pointer;
  border-radius: var(--radius-md); /* 12px rounded */
  width: 100%;
  text-decoration: none;
  /* iOS-style transitions */
  transition: all var(--duration-fast) var(--ease-smooth),
              transform var(--duration-fast) var(--ease-spring);
}

.sidebar__list-item:hover {
  background-color: var(--color-bg-secondary);
  color: var(--color-primary);
  transform: translateX(2px); /* Subtle slide on hover */
}

.sidebar__list-item:active {
  transform: translateX(2px) scale(0.98); /* Slight press */
}

.sidebar__list-item--active {
  background-color: var(--color-primary);
  color: var(--color-text-inverse);
  font-weight: var(--weight-medium);
  box-shadow: var(--shadow-primary);
}

.sidebar__list-item--active:hover {
  background-color: var(--color-primary-hover);
  transform: translateX(0); /* No slide when active */
}

.sidebar__list-icon {
  font-size: 18px;
  width: 18px;
  height: 18px;
  flex-shrink: 0;
}

.sidebar__list-text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sidebar__empty {
  padding: var(--space-12); /* 48px generous padding */
  text-align: center;
  color: var(--color-text-tertiary);
  font-size: var(--font-sm);
}

.sidebar__info-block {
  background-color: var(--color-bg-secondary);
  padding: var(--space-4); /* 16px */
  border-radius: var(--radius-lg); /* 16px rounded */
  margin-bottom: var(--space-4);
  border: var(--border-thin) solid var(--color-border);
}

.sidebar__info-title {
  font-size: var(--font-sm);
  font-weight: var(--weight-semibold);
  color: var(--color-text-primary);
  margin-bottom: var(--space-2);
}

.sidebar__info-text {
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
  line-height: var(--leading-relaxed);
  margin: 0;
}

.sidebar__info-item {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
  margin-bottom: var(--space-3);
}

.sidebar__info-item:last-child {
  margin-bottom: 0;
}

/* Sidebar section visibility handled above in .sidebar__section definition */

.sidebar__info-label {
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.sidebar__info-value {
  font-size: var(--font-size-sm);
  font-weight: 500;
  color: var(--color-text);
}

/* ==================== CONTEXT TOOLBAR ==================== */
.toolbar {
  background-color: var(--color-surface);
  border-bottom: var(--border-width) solid var(--color-border);
  padding: var(--spacing-sm) var(--spacing-lg);
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--spacing-lg);
  flex-shrink: 0;
  height: 52px;
}

.toolbar__left {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  flex: 1;
  max-width: 600px;
}

.toolbar__title-input {
  flex: 1;
  padding: var(--spacing-xs) var(--spacing-md);
  border: var(--border-width) solid var(--color-border);
  border-radius: var(--border-radius);
  font-size: var(--font-size-sm);
  font-weight: 500;
  transition: var(--transition);
  background-color: var(--color-surface);
}

.toolbar__title-input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.toolbar__schema-select {
  padding: var(--spacing-xs) var(--spacing-md);
  border: var(--border-width) solid var(--color-border);
  border-radius: var(--border-radius);
  font-size: var(--font-size-sm);
  background-color: var(--color-surface);
  cursor: pointer;
  transition: var(--transition);
  min-width: 160px;
}

.toolbar__schema-select:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.toolbar__right {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

/* ==================== CONTENT ==================== */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: var(--color-bg);
  margin-left: var(--layout-content-start);
  padding-bottom: 0; /* ✅ УДАЛЕНО - padding только в child views (.home-dashboard, .service-store) */
}

.content__wrapper {
  flex: 1;
  overflow-y: auto;
}

/* ==================== WELCOME SCREEN ==================== */
.welcome {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: var(--spacing-2xl);
}

.welcome__content {
  max-width: 600px;
  text-align: center;
}

.welcome__title {
  font-size: var(--font-size-3xl);
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: var(--spacing-md);
}

.welcome__text {
  font-size: var(--font-size-lg);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-2xl);
}

.welcome__actions {
  display: flex;
  gap: var(--spacing-md);
  justify-content: center;
  margin-bottom: var(--spacing-2xl);
}

.welcome__info {
  background-color: var(--color-surface);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
}

.welcome__info-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  margin-bottom: var(--spacing-md);
  color: var(--color-text);
}

.welcome__info-list {
  list-style: none;
  text-align: left;
}

.welcome__info-item {
  padding: var(--spacing-sm) 0;
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.welcome__info-item strong {
  color: var(--color-primary);
  font-weight: 600;
}

/* ==================== EDITOR ==================== */
.editor {
  /* Remove height: 100% to allow content__wrapper overflow to work */
  display: flex;
  flex-direction: column;
}

.editor__header {
  background-color: var(--color-surface);
  border-bottom: var(--border-width) solid var(--color-border);
  padding: var(--spacing-lg) var(--spacing-xl);
  display: flex;
  gap: var(--spacing-md);
  align-items: center;
}

.editor__title-input {
  flex: 1;
  padding: var(--spacing-sm) var(--spacing-md);
  font-size: var(--font-size-lg);
  font-weight: 600;
  border: var(--border-width) solid var(--color-border);
  border-radius: var(--border-radius);
  background-color: var(--color-bg);
  color: var(--color-text);
  transition: var(--transition);
}

.editor__title-input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.editor__schema-select {
  padding: var(--spacing-sm) var(--spacing-md);
  font-size: var(--font-size-sm);
  border: var(--border-width) solid var(--color-border);
  border-radius: var(--border-radius);
  background-color: var(--color-bg);
  color: var(--color-text);
  cursor: pointer;
  transition: var(--transition);
}

.editor__schema-select:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.editor__content {
  /* Remove overflow-y: auto - parent .content__wrapper handles scrolling */
  padding: var(--spacing-xl);
  padding-bottom: 120px; /* ✅ Footer (36px) + Toolbar (56px) + gaps (28px) = 120px */
}

.editor__form {
  max-width: 900px;
  margin: 0 auto;
}

.editor__placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 300px;
  color: var(--color-text-light);
  font-size: var(--font-size-lg);
}

/* ==================== FOOTER ==================== */
.footer {
  position: fixed; /* ✅ Фиксированный внизу экрана */
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--color-surface);
  border-top: var(--border-width) solid var(--color-border);
  padding: var(--spacing-sm) var(--spacing-xl);
  z-index: 50; /* ✅ Выше контента (1), ниже sidebar (90), toolbar (500) */
  flex-shrink: 0;
}

.footer__container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer__info {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.footer__separator {
  color: var(--color-border);
}

.footer__autosave {
  display: flex;
  align-items: center;
}

.footer__autosave-indicator {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  font-size: var(--font-size-xs);
  color: var(--color-success);
}

.footer__autosave-icon {
  font-size: 1.2em;
}

/* ==================== ACCORDION COMPONENT ==================== */
.accordion {
  border: var(--border-width) solid var(--color-border);
  border-radius: var(--border-radius);
  background-color: var(--color-surface);
  margin-bottom: var(--spacing-md);
}

.accordion__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) var(--spacing-lg);
  cursor: pointer;
  user-select: none;
  transition: var(--transition);
}

.accordion__header:hover {
  background-color: var(--color-bg);
}

.accordion__title {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--color-text);
}

.accordion__icon {
  font-size: var(--font-size-lg);
  color: var(--color-text-secondary);
  transition: var(--transition);
}

.accordion--open .accordion__icon {
  transform: rotate(180deg);
}

.accordion__content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease-in-out;
}

.accordion--open .accordion__content {
  max-height: 5000px;
}

.accordion__body {
  padding: var(--spacing-lg);
  border-top: var(--border-width) solid var(--color-border);
}

/* ==================== INPUT FIELD COMPONENT ==================== */
/* ==================== FORM INPUTS (iOS-inspired) ==================== */
.input-field {
  margin-bottom: var(--space-6); /* 24px */
}

.input-field__label {
  display: block;
  font-size: var(--font-sm);
  font-weight: var(--weight-medium);
  color: var(--color-text-primary);
  margin-bottom: var(--space-2);
}

.input-field__label--required::after {
  content: ' *';
  color: var(--color-danger);
}

.input-field__input,
.input-field__textarea,
.input-field__select {
  width: 100%;
  padding: var(--space-3) var(--space-4); /* 12px 16px */
  font-size: var(--font-base); /* 15px iOS standard */
  font-family: var(--font-text);
  font-weight: var(--weight-regular);
  line-height: var(--leading-normal);
  border: var(--border-medium) solid var(--color-border); /* 2px border */
  border-radius: var(--radius-md); /* 12px modern rounded */
  background-color: var(--color-bg-elevated);
  color: var(--color-text-primary);
  /* iOS-style transitions */
  transition: border-color var(--duration-fast) var(--ease-smooth),
              box-shadow var(--duration-fast) var(--ease-smooth),
              background-color var(--duration-fast) var(--ease-smooth);
}

.input-field__input:hover,
.input-field__textarea:hover,
.input-field__select:hover {
  border-color: var(--color-border-strong);
}

.input-field__input:focus,
.input-field__textarea:focus,
.input-field__select:focus {
  outline: none;
  border-color: var(--color-primary);
  background-color: #ffffff;
  /* iOS-style focus ring */
  box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
}

.input-field__input::placeholder,
.input-field__textarea::placeholder {
  color: var(--color-text-tertiary);
  opacity: 1;
}

.input-field__textarea {
  resize: vertical;
  min-height: 120px;
  line-height: var(--leading-relaxed);
}

.input-field__help {
  display: block;
  font-size: var(--font-xs);
  color: var(--color-text-secondary);
  margin-top: var(--space-2);
}

.input-field__error {
  display: block;
  font-size: var(--font-xs);
  font-weight: var(--weight-medium);
  color: var(--color-danger);
  margin-top: var(--space-2);
}

/* Error state */
.input-field--error .input-field__input,
.input-field--error .input-field__textarea,
.input-field--error .input-field__select {
  border-color: var(--color-danger);
  background-color: rgba(244, 63, 94, 0.02);
}

.input-field--error .input-field__input:focus,
.input-field--error .input-field__textarea:focus,
.input-field--error .input-field__select:focus {
  box-shadow: 0 0 0 4px rgba(244, 63, 94, 0.1);
}

/* Success state */
.input-field--success .input-field__input,
.input-field--success .input-field__textarea,
.input-field--success .input-field__select {
  border-color: var(--color-success);
  background-color: rgba(20, 184, 166, 0.02);
}

.input-field--success .input-field__input:focus,
.input-field--success .input-field__textarea:focus,
.input-field--success .input-field__select:focus {
  box-shadow: 0 0 0 4px rgba(20, 184, 166, 0.1);
}

/* Disabled state */
.input-field__input:disabled,
.input-field__textarea:disabled,
.input-field__select:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  background-color: var(--color-bg-secondary);
}

/* ==================== LOADING OVERLAY ==================== */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-spinner {
  width: 50px;
  height: 50px;
  border: 4px solid var(--color-border);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: var(--spacing-md);
  color: white;
  font-size: var(--font-size-lg);
}

/* ==================== TOAST NOTIFICATIONS ==================== */
.toast-container {
  position: fixed;
  top: var(--spacing-xl);
  right: var(--spacing-xl);
  z-index: 10000;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.toast {
  min-width: 300px;
  padding: var(--spacing-md) var(--spacing-lg);
  background-color: var(--color-surface);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-lg);
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  animation: slideIn 0.3s ease-in-out;
}

@keyframes slideIn {
  from {
    transform: translateX(400px);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

.toast--success {
  border-left: 4px solid var(--color-success);
}

.toast--error {
  border-left: 4px solid var(--color-danger);
}

.toast--warning {
  border-left: 4px solid var(--color-warning);
}

.toast--info {
  border-left: 4px solid var(--color-primary);
}

.toast__icon {
  font-size: var(--font-size-xl);
}

.toast__content {
  flex: 1;
}

.toast__title {
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: var(--spacing-xs);
}

.toast__message {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

/* ==================== FORM FIELD GROUPS ==================== */
.input-field__group {
  margin-bottom: var(--spacing-xl);
  padding: var(--spacing-lg);
  background-color: var(--color-bg-secondary);
  border-radius: var(--border-radius);
  border: var(--border-width) solid var(--color-border);
}

.input-field__group-title {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: var(--spacing-md);
  padding-bottom: var(--spacing-sm);
  border-bottom: 2px solid var(--color-primary);
}

.input-field__group-content {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

/* ==================== RICH TEXT EDITOR ==================== */
.input-field__richtext {
  margin-top: var(--spacing-sm);
}

.input-field__richtext-editor {
  width: 100%;
  min-height: 200px;
  border: var(--border-width) solid var(--color-border);
  border-radius: var(--border-radius);
}

/* TinyMCE custom styling */
.tox-tinymce {
  border-radius: var(--border-radius);
}

.tox .tox-toolbar,
.tox .tox-toolbar__overflow,
.tox .tox-toolbar__primary {
  background-color: var(--color-bg) !important;
}

.tox .tox-statusbar {
  background-color: var(--color-bg) !important;
  border-top: var(--border-width) solid var(--color-border) !important;
}

/* ==================== CHECKBOX STYLES ==================== */
.input-field__label--checkbox {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  cursor: pointer;
  user-select: none;
}

.input-field__checkbox {
  width: 18px;
  height: 18px;
  cursor: pointer;
}

/* ==================== SECTION DESCRIPTION ==================== */
.section__description {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-lg);
  padding: var(--spacing-md);
  background-color: var(--color-bg-secondary);
  border-radius: var(--border-radius);
  border-left: 4px solid var(--color-primary);
}

/* ==================== EDITOR ERROR ==================== */
.editor__error {
  padding: var(--spacing-xl);
  text-align: center;
  color: var(--color-danger);
  background-color: #fef2f2;
  border-radius: var(--border-radius);
  border: var(--border-width) solid var(--color-danger);
}

/* ==================== SCROLLBAR ==================== */
::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}

::-webkit-scrollbar-track {
  background: var(--color-bg);
}

::-webkit-scrollbar-thumb {
  background: var(--color-border);
  border-radius: var(--border-radius);
}

::-webkit-scrollbar-thumb:hover {
  background: var(--color-text-light);
}

/* ==================== MODAL OVERLAY ==================== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9998;
  opacity: 0;
  transition: opacity 0.2s ease-in-out;
}

.modal-overlay--visible {
  opacity: 1;
}

.modal-overlay--hiding {
  opacity: 0;
}

/* ==================== DOCUMENT SELECTOR ==================== */
.document-selector {
  background-color: var(--color-surface);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
  width: 90%;
  max-width: 600px;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  animation: modalSlideIn 0.2s ease-out;
}

@keyframes modalSlideIn {
  from {
    transform: translateY(-20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* Document Selector Header */
.document-selector__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-lg) var(--spacing-xl);
  border-bottom: var(--border-width) solid var(--color-border);
}

.document-selector__title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--color-text);
  margin: 0;
}

.document-selector__close {
  background: none;
  border: none;
  font-size: var(--font-size-3xl);
  line-height: 1;
  color: var(--color-text-secondary);
  cursor: pointer;
  padding: 0;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--border-radius);
  transition: var(--transition);
}

.document-selector__close:hover {
  background-color: var(--color-bg);
  color: var(--color-text);
}

/* Document Selector Search */
.document-selector__search {
  padding: var(--spacing-lg) var(--spacing-xl);
  border-bottom: var(--border-width) solid var(--color-border);
}

.document-selector__search-input {
  width: 100%;
  padding: var(--spacing-md);
  border: var(--border-width) solid var(--color-border);
  border-radius: var(--border-radius);
  font-size: var(--font-size-base);
  font-family: var(--font-family);
  color: var(--color-text);
  background-color: var(--color-surface);
  transition: var(--transition);
}

.document-selector__search-input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.document-selector__search-input::placeholder {
  color: var(--color-text-light);
}

/* Document Selector List */
.document-selector__list {
  flex: 1;
  overflow-y: auto;
  padding: var(--spacing-md);
  min-height: 200px;
  max-height: 400px;
}

.document-selector__empty {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200px;
  color: var(--color-text-secondary);
  font-size: var(--font-size-base);
}

/* Document Selector Item */
.document-selector__item {
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--border-radius);
  cursor: pointer;
  transition: var(--transition);
  margin-bottom: var(--spacing-sm);
  border: var(--border-width) solid transparent;
}

.document-selector__item:hover {
  background-color: var(--color-bg);
}

.document-selector__item--selected {
  background-color: var(--color-primary-light);
  border-color: var(--color-primary);
  color: white;
}

.document-selector__item--selected .document-selector__item-title {
  color: white;
}

.document-selector__item--selected .document-selector__item-meta,
.document-selector__item--selected .document-selector__item-schema,
.document-selector__item--selected .document-selector__item-date {
  color: rgba(255, 255, 255, 0.9);
}

.document-selector__item-title {
  font-size: var(--font-size-base);
  font-weight: 500;
  color: var(--color-text);
  margin-bottom: var(--spacing-xs);
}

.document-selector__item-meta {
  display: flex;
  gap: var(--spacing-lg);
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.document-selector__item-schema {
  display: inline-flex;
  align-items: center;
}

.document-selector__item-date {
  display: inline-flex;
  align-items: center;
}

/* Document Selector Footer */
.document-selector__footer {
  display: flex;
  justify-content: flex-end;
  padding: var(--spacing-lg) var(--spacing-xl);
  border-top: var(--border-width) solid var(--color-border);
  gap: var(--spacing-md);
}

/* ==================== VALIDATION PANEL ==================== */

/* Validation Panel Overlay */
.validation-panel__overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.validation-panel__overlay--visible {
  opacity: 1;
}

/* Validation Panel */
.validation-panel {
  position: fixed;
  top: 50%;
  left: 50%;
