/* ==================== SIDEBAR NAVIGATION MENU ==================== */
.sidebar__menu {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.sidebar__menu-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  background: none;
  border: none;
  border-radius: var(--border-radius);
  font-family: var(--font-family);
  font-size: var(--font-size-sm);
  color: var(--color-text);
  cursor: pointer;
  transition: all 0.2s ease;
  text-align: left;
  width: 100%;
}

.sidebar__menu-item:hover:not(.sidebar__menu-item--disabled) {
  background-color: var(--color-bg-secondary);
  transform: translateX(2px);
}

.sidebar__menu-item:active:not(.sidebar__menu-item--disabled) {
  transform: translateX(4px);
}

.sidebar__menu-item--disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

.sidebar__menu-icon {
  font-size: var(--font-size-lg);
  line-height: 1;
  flex-shrink: 0;
}

.sidebar__menu-text {
  flex: 1;
}

.sidebar__menu-item--active {
  background-color: var(--color-primary);
  color: white;
}

.sidebar__menu-item--active .sidebar__menu-icon {
  animation: bounce 0.5s ease;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-3px); }
}

/* ==================== NEW 3-LEVEL NAVIGATION ==================== */

/* App Container */
.app-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* App Navigation (Level 1 - Horizontal Top Bar) */
/* ==================== APP NAVIGATION (Pill-shaped iOS style) ==================== */
.app-nav {
  height: 56px; /* More compact */
  background: var(--color-bg-elevated);
  border-bottom: var(--border-thin) solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  z-index: var(--z-sticky);
  padding: var(--space-2) var(--space-4);
}

.app-nav__container {
  display: inline-flex;
  align-items: center;
  gap: var(--space-1); /* Tight spacing between pills */
  padding: var(--space-1);
  background-color: var(--color-bg-secondary);
  border-radius: var(--radius-full); /* Container is also pill-shaped */
  box-shadow: var(--shadow-xs);
}

.app-nav__item {
  display: inline-flex;
  flex-direction: row; /* Horizontal layout */
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  padding: var(--space-2) var(--space-4); /* 8px 16px compact */
  text-decoration: none;
  font-size: var(--font-sm);
  font-weight: var(--weight-medium);
  color: var(--color-text-secondary);
  border: none;
  background: transparent;
  border-radius: var(--radius-full); /* Pill-shaped items */
  cursor: pointer;
  white-space: nowrap;
  user-select: none;
  -webkit-user-select: none;
  /* iOS-style spring transition */
  transition: all var(--duration-fast) var(--ease-smooth),
              transform var(--duration-fast) var(--ease-spring);
}

.app-nav__item:hover:not(.app-nav__item--active) {
  color: var(--color-text-primary);
  background-color: rgba(255, 255, 255, 0.5);
}

.app-nav__item:active {
  transform: scale(0.96); /* Spring press */
}

/* Active state - filled pill */
.app-nav__item--active {
  color: var(--color-text-inverse);
  background-color: var(--color-primary);
  box-shadow: var(--shadow-primary);
}

.app-nav__item--active:hover {
  background-color: var(--color-primary-hover);
}

/* Remove bottom indicator (now using filled background) */
.app-nav__item--active::after {
  display: none;
}

.app-nav__icon {
  font-size: 18px; /* Smaller, more refined */
  width: 18px;
  height: 18px;
  flex-shrink: 0;
}

.app-nav__label {
  font-size: var(--font-sm);
  font-weight: var(--weight-medium);
  line-height: 1;
}

/* Dashboard Components (Clean Layout - Adaptive) */
.home-dashboard {
  margin-left: 0; /* ⬅️ УБРАНО! Отступ уже есть у .content */
  margin-right: var(--space-6); /* 24px right padding */
  padding: var(--space-6) var(--space-6) 120px var(--space-5); /* ✅ Footer (36px) + Toolbar (56px) + gaps (28px) = 120px */
  width: auto;
  max-width: 100%;
  position: relative;
}

/* ==================== DASHBOARD (Modern Hero Style) ==================== */
.dashboard {
  display: flex;
  flex-direction: column;
  gap: var(--space-10); /* 40px generous gaps */
}

.dashboard__header {
  padding: var(--space-12) 0; /* 48px top/bottom */
  background: linear-gradient(135deg,
    var(--blue-50) 0%,
    var(--blue-100) 50%,
    var(--teal-400) 100%);
  border-radius: var(--radius-2xl); /* 24px super rounded */
  box-shadow: var(--shadow-sm);
  text-align: center;
  position: relative;
  overflow: hidden;
}

/* Decorative gradient overlay */
.dashboard__header::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg,
    rgba(59, 130, 246, 0.1) 0%,
    rgba(45, 212, 191, 0.1) 100%);
  pointer-events: none;
}

.dashboard__title {
  font-family: var(--font-display);
  font-size: var(--font-4xl); /* 48px large title */
  font-weight: var(--weight-bold);
  color: var(--color-text-primary);
  margin-bottom: var(--space-3);
  position: relative;
  z-index: 1;
}

.dashboard__subtitle {
  font-size: var(--font-lg); /* 17px */
  font-weight: var(--weight-regular);
  color: var(--color-text-secondary);
  position: relative;
  z-index: 1;
}

/* Quick Actions Grid */
.dashboard__quick-actions {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--space-6); /* 24px gap */
  margin-bottom: var(--space-10);
}

/* Quick Action Card - Large Prominent Style */
.quick-action-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-10); /* 40px generous padding */
  background: linear-gradient(135deg,
    var(--color-bg-elevated) 0%,
    var(--blue-50) 100%);
  border: var(--border-thin) solid var(--color-border);
  border-radius: var(--radius-2xl); /* 24px super rounded */
  cursor: pointer;
  text-align: center;
  box-shadow: var(--shadow-sm);
  transition: all var(--duration-normal) var(--ease-smooth),
              transform var(--duration-normal) var(--ease-spring);
  position: relative;
  overflow: hidden;
  min-height: 220px;
}

.quick-action-card::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg,
    transparent 0%,
    rgba(59, 130, 246, 0.05) 100%);
  opacity: 0;
  transition: opacity var(--duration-normal) var(--ease-smooth);
}

.quick-action-card:hover {
  border-color: var(--color-primary);
  transform: translateY(-8px) scale(1.02); /* Bigger lift */
  box-shadow: var(--shadow-lg);
}

.quick-action-card:hover::before {
  opacity: 1;
}

.quick-action-card:active {
  transform: translateY(-6px) scale(0.99);
}

.quick-action-card__icon {
  font-size: 64px; /* Large icon */
  margin-bottom: var(--space-4);
  position: relative;
  z-index: 1;
}

.quick-action-card__title {
  font-size: var(--font-xl); /* 22px prominent */
  font-weight: var(--weight-semibold);
  color: var(--color-text-primary);
  margin-bottom: var(--space-2);
  position: relative;
  z-index: 1;
}

.quick-action-card__desc {
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
  line-height: var(--leading-relaxed);
  position: relative;
  z-index: 1;
}

.dashboard__widgets {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--spacing-lg);
}

.widget {
  background-color: var(--color-surface);
  border: var(--border-width) solid var(--color-border);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
}

.widget__title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: var(--spacing-md);
  padding-bottom: var(--spacing-sm);
  border-bottom: 2px solid var(--color-primary);
}

.widget__content {
  display: flex;
  gap: var(--spacing-lg);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-item__value {
  font-size: var(--font-size-3xl);
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: var(--spacing-xs);
}

.stat-item__label {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  text-align: center;
}

/* Service Store (Clean Layout - Adaptive) */
.service-store {
  margin-left: 0; /* ⬅️ УБРАНО! Отступ уже есть у .content */
  margin-right: var(--space-6); /* 24px right padding */
  padding: var(--space-6) var(--space-6) 120px var(--space-5); /* ✅ Footer (36px) + Toolbar (56px) + gaps (28px) = 120px */
  width: auto;
  max-width: 100%;
  position: relative;
}

.service-store__header {
  margin-bottom: var(--spacing-xl);
}

.service-store__title {
  font-size: var(--font-size-3xl);
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: var(--spacing-md);
}

.service-store__search {
  width: 100%;
  max-width: 500px;
  padding: var(--spacing-sm) var(--spacing-md);
  border: var(--border-width) solid var(--color-border);
  border-radius: var(--border-radius);
  font-size: var(--font-size-base);
  margin-bottom: var(--spacing-md);
  transition: var(--transition);
}

.service-store__search:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.service-store__filters {
  display: flex;
  gap: var(--spacing-sm);
  flex-wrap: wrap;
}

.service-store__filter,
.filter-pill {
  padding: var(--spacing-sm) var(--spacing-md);
  background-color: var(--color-surface);
  border: var(--border-width) solid var(--color-border);
  border-radius: calc(var(--border-radius) * 3);
  font-size: var(--font-size-sm);
  font-weight: 500;
  color: var(--color-text);
  cursor: pointer;
  transition: var(--transition);
}

.service-store__filter:hover,
.filter-pill:hover {
  background-color: var(--color-bg);
  border-color: var(--color-primary);
}

.service-store__filter--active,
.filter-pill--active {
  background-color: var(--color-primary);
  border-color: var(--color-primary);
  color: white;
}

.service-store__section-title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: var(--spacing-md);
}

.service-store__category-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-xl);
  margin-bottom: var(--spacing-md);
  padding-bottom: var(--spacing-sm);
  border-bottom: 2px solid var(--color-border);
}

.service-store__category-icon {
  font-size: var(--font-size-xl);
}

.service-store__category-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--color-text);
  flex: 1;
}

.service-store__category-count {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  background-color: var(--color-bg);
  padding: 2px 8px;
  border-radius: 12px;
}

.service-store__empty {
  text-align: center;
  padding: var(--spacing-2xl);
  color: var(--color-text-secondary);
  font-size: var(--font-size-lg);
}

.service-store__featured {
  margin-bottom: var(--spacing-xl);
}

.featured-banner {
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  color: white;
  padding: var(--spacing-2xl);
  border-radius: var(--border-radius-lg);
  text-align: center;
}

.featured-banner h2 {
  font-size: var(--font-size-2xl);
  margin-bottom: var(--spacing-md);
}

.featured-banner p {
  font-size: var(--font-size-lg);
  margin-bottom: var(--spacing-lg);
  opacity: 0.9;
}

.service-store__grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: var(--spacing-lg);
}

/* Service Card - Consistent Height & Overflow Handling */
.service-card {
  background-color: var(--color-bg-elevated);
  border: var(--border-thin) solid var(--color-border);
  border-radius: var(--radius-xl); /* 20px modern rounded */
  padding: var(--space-6); /* 24px generous padding */
  display: flex;
  flex-direction: column;
  box-shadow: var(--shadow-sm); /* Level 2: Floating */
  min-height: 320px; /* Consistent minimum height */
  /* iOS-style spring animation */
  transition: all var(--duration-normal) var(--ease-smooth),
              transform var(--duration-normal) var(--ease-spring),
              box-shadow var(--duration-fast) var(--ease-smooth);
}

.service-card:hover {
  box-shadow: var(--shadow-md); /* Level 3: Elevated on hover */
  transform: translateY(-4px) scale(1.02); /* More prominent lift */
  border-color: var(--color-primary);
}

.service-card__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.service-card__icon {
  font-size: 2rem;
}

.service-card__status {
  font-size: 1.25rem;
}

.service-card__status--installed {
  color: var(--color-success);
}

.service-card__badge {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--border-radius);
  font-size: var(--font-size-xs);
  font-weight: 600;
  text-transform: uppercase;
}

.service-card__badge--pro {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.service-card__title {
  font-size: var(--font-lg); /* 17px */
  font-weight: var(--weight-semibold);
  color: var(--color-text-primary);
  margin-bottom: var(--space-2);
  /* Prevent overflow - max 2 lines */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-word;
  line-height: var(--leading-tight);
}

.service-card__description {
  font-size: var(--font-sm);
  color: var(--color-text-secondary);
  margin-bottom: var(--space-4);
  flex: 1;
  /* Prevent overflow - max 3 lines */
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-word;
  line-height: var(--leading-relaxed);
}

.service-card__footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: var(--border-width) solid var(--color-border);
}

.service-card__tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-md);
}

.service-card__tag {
  padding: 2px 8px;
  background-color: var(--color-bg);
  border-radius: var(--border-radius);
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
}

.service-card__price {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--color-primary);
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.service-card__price--free {
  color: var(--color-success);
}

.service-card__price-badge {
  font-size: var(--font-size-xs);
  padding: 2px 6px;
  border-radius: var(--border-radius);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: 600;
  text-transform: uppercase;
}

.service-card__price-badge--enterprise {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.service-card__action {
  padding: var(--spacing-sm) var(--spacing-md);
  background-color: var(--color-primary);
  color: white;
  border: none;
  border-radius: var(--border-radius);
  font-size: var(--font-size-sm);
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition);
}

.service-card__action:hover:not(:disabled) {
  background-color: var(--color-primary-dark);
}

.service-card__action:disabled {
  background-color: var(--color-bg-secondary);
  color: var(--color-text-secondary);
  cursor: not-allowed;
}

.service-card__action--buy {
  background-color: var(--color-accent);
}

.service-card__action--buy:hover {
  background-color: var(--color-accent-dark);
}

.service-card__rating {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-sm);
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
}

/* Sidebar Categories */
/* ==================== SIDEBAR CATEGORIES (Modern Pill Style) ==================== */
.sidebar__category {
  margin-bottom: var(--space-3);
}

.sidebar__category-header {
  display: flex;
  align-items: center;
  gap: var(--space-3); /* 12px gap */
  width: 100%;
  padding: var(--space-3) var(--space-4); /* 12px 16px */
  background: var(--color-bg-elevated);
  border: var(--border-thin) solid var(--color-border);
  border-radius: var(--radius-full); /* Pill-shaped! */
  cursor: pointer;
  font-family: var(--font-text);
  font-size: var(--font-sm);
  font-weight: var(--weight-medium);
  color: var(--color-text-primary);
  text-align: left;
  box-shadow: var(--shadow-xs);
  transition: all var(--duration-fast) var(--ease-smooth),
              transform var(--duration-fast) var(--ease-spring);
}

.sidebar__category-header:hover {
  background-color: var(--color-bg-secondary);
  border-color: var(--color-primary);
  transform: translateX(2px);
  box-shadow: var(--shadow-sm);
}

.sidebar__category-header:active {
  transform: translateX(2px) scale(0.98);
}

.sidebar__category--open .sidebar__category-header {
  background-color: var(--color-primary);
  color: var(--color-text-inverse);
  border-color: var(--color-primary);
  box-shadow: var(--shadow-primary);
}

.sidebar__category--open .sidebar__category-header:hover {
  background-color: var(--color-primary-hover);
}

.sidebar__category-icon {
  font-size: 18px;
  width: 18px;
  height: 18px;
  flex-shrink: 0;
}

.sidebar__category-title {
  flex: 1;
  font-weight: var(--weight-medium);
}

.sidebar__category-count {
  font-size: var(--font-xs);
  color: var(--color-text-secondary);
  background-color: var(--neutral-200);
  padding: var(--space-1) var(--space-2); /* 4px 8px */
  border-radius: var(--radius-full); /* Pill badge */
  margin-left: auto;
  font-weight: var(--weight-semibold);
  min-width: 24px;
  text-align: center;
}

.sidebar__category--open .sidebar__category-count {
  background-color: rgba(255, 255, 255, 0.2);
  color: var(--color-text-inverse);
}

.sidebar__category-toggle {
  font-size: var(--font-xs);
  color: var(--color-text-tertiary);
  transition: transform var(--duration-fast) var(--ease-smooth);
}

.sidebar__category--open .sidebar__category-toggle {
  transform: rotate(180deg);
  color: var(--color-text-inverse);
}

.sidebar__category-list {
  list-style: none;
  padding: 0;
  margin: var(--spacing-xs) 0 0 var(--spacing-lg);
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.sidebar__category--open .sidebar__category-list {
  max-height: 500px;
}

.sidebar__category-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-xs) var(--spacing-sm);
  cursor: pointer;
  border-radius: var(--border-radius);
  transition: var(--transition);
  font-size: var(--font-size-sm);
  color: var(--color-text);
}

.sidebar__category-item:hover {
  background-color: var(--color-bg);
}

.sidebar__category-item--active {
  background-color: var(--color-primary);
  color: white;
}

.sidebar__category-item-icon {
  font-size: 1em;
  flex-shrink: 0;
}

.sidebar__category-item-title {
  flex: 1;
}

.sidebar__category-item-badge {
  margin-left: auto;
  padding: 2px 6px;
  background-color: var(--color-primary);
  color: white;
  font-size: 10px;
  font-weight: 600;
  border-radius: 3px;
}

.sidebar__filters {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.sidebar__filter {
  padding: var(--spacing-sm) var(--spacing-md);
  background: none;
  border: var(--border-width) solid var(--color-border);
  border-radius: var(--border-radius);
  font-family: var(--font-family);
  font-size: var(--font-size-sm);
  color: var(--color-text);
  cursor: pointer;
  transition: var(--transition);
  text-align: left;
}

.sidebar__filter:hover {
  background-color: var(--color-bg);
  border-color: var(--color-primary);
}

.sidebar__filter--active {
  background-color: var(--color-primary);
  border-color: var(--color-primary);
  color: white;
}

/* Responsive adjustments */
@media (max-width: 1024px) {
  .dashboard__quick-actions {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  }

  .service-store__grid {
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  }
}

@media (max-width: 768px) {
  .app-nav__item {
    padding: var(--spacing-sm);
    min-width: 80px;
  }

  .app-nav__icon {
    font-size: 1.25rem;
  }

  .app-nav__label {
    font-size: var(--font-size-xs);
  }

  .dashboard__quick-actions {
    grid-template-columns: 1fr;
  }

  .service-store__grid {
    grid-template-columns: 1fr;
  }

  .dashboard__widgets {
    grid-template-columns: 1fr;
  }
}

/* ==================== ACTIVITY BAR (Week 3-4) ==================== */
.activity-bar {
  position: fixed;
  left: 0;
  top: 60px; /* After app-nav */
  bottom: 0;
  width: var(--layout-activity-bar-width);
  background-color: var(--color-surface);
  border-right: var(--border-width) solid var(--color-border);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-sm) 0;
  gap: var(--spacing-xs);
  z-index: 100;
  overflow-y: auto;
}

.activity-bar__item {
  position: relative;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: none;
  border: none;
  border-radius: var(--border-radius);
  cursor: pointer;
  transition: var(--transition);
  color: var(--color-text-secondary);
}

.activity-bar__item:hover {
  background-color: var(--color-bg);
  color: var(--color-primary);
}

.activity-bar__item--active {
  background-color: var(--color-primary);
  color: white;
}

.activity-bar__item--active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 3px;
  height: 24px;
  background-color: var(--color-primary);
  border-radius: 0 2px 2px 0;
}

.activity-bar__item-icon {
  font-size: 1.25rem;
  line-height: 1;
}

.activity-bar__item-badge {
  position: absolute;
  top: 2px;
  right: 2px;
  min-width: 16px;
  height: 16px;
  padding: 0 4px;
  background-color: var(--color-danger);
  color: white;
  border-radius: 8px;
  font-size: 10px;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

/* ==================== TAB BAR (Week 3-4) ==================== */
.tab-bar {
  height: 36px;
  background-color: var(--color-surface);
  border-bottom: var(--border-width) solid var(--color-border);
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: 0 var(--spacing-sm);
  overflow-x: auto;
  overflow-y: hidden;
  flex-shrink: 0;
}

.tab-bar__tabs {
  display: flex;
  gap: var(--spacing-xs);
  flex: 1;
  overflow-x: auto;
  overflow-y: hidden;
}

.tab-bar__tab {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-xs) var(--spacing-sm);
  background-color: var(--color-bg);
  border: var(--border-width) solid var(--color-border);
  border-bottom: none;
  border-radius: var(--border-radius) var(--border-radius) 0 0;
  cursor: pointer;
  transition: var(--transition);
  min-width: 100px;
  max-width: 200px;
  position: relative;
  white-space: nowrap;
}

.tab-bar__tab:hover {
  background-color: var(--color-bg-secondary);
}

.tab-bar__tab--active {
  background-color: var(--color-surface);
  border-color: var(--color-primary);
  border-bottom-color: var(--color-surface);
}

.tab-bar__tab-icon {
  font-size: 0.875rem;
  line-height: 1;
  flex-shrink: 0;
}

.tab-bar__tab-title {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: var(--font-size-sm);
  color: var(--color-text);
}

.tab-bar__tab-dirty-indicator {
  color: var(--color-warning);
  font-size: 0.75rem;
  line-height: 1;
  flex-shrink: 0;
}

.tab-bar__tab-close {
  width: 18px;
  height: 18px;
  padding: 0;
  background: none;
  border: none;
  border-radius: 3px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-text-secondary);
  font-size: 1rem;
  line-height: 1;
  transition: var(--transition);
  flex-shrink: 0;
}

.tab-bar__tab-close:hover {
  background-color: var(--color-danger);
  color: white;
}

.tab-bar__close-all {
  padding: var(--spacing-xs) var(--spacing-sm);
  background: none;
  border: var(--border-width) solid var(--color-border);
  border-radius: var(--border-radius);
  cursor: pointer;
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
  transition: var(--transition);
  white-space: nowrap;
  flex-shrink: 0;
}

.tab-bar__close-all:hover {
  background-color: var(--color-danger);
  color: white;
  border-color: var(--color-danger);
}

/* ==================== CONTEXT TOOLBAR (Conditional - Level 4) ==================== */
/* Context Toolbar appears only when document is open */
/* ==================== CONTEXT TOOLBAR (Floating Glassmorphic - Adaptive) ==================== */
.context-toolbar {
  position: fixed;
  bottom: var(--space-4); /* 16px gap from bottom - floating! */
  left: var(--layout-content-start);
  right: var(--space-4); /* 16px gap from right */
  height: 56px; /* Compact height */
  /* Glassmorphic effect */
  background-color: var(--color-surface-glass); /* Semi-transparent */
  backdrop-filter: blur(var(--blur-lg)); /* 24px blur - frosted glass! */
  -webkit-backdrop-filter: blur(var(--blur-lg));
  border: var(--border-thin) solid var(--color-border-glass);
  border-radius: var(--radius-2xl); /* 24px super rounded */
  display: none; /* Hidden by default */
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--space-6); /* 24px horizontal padding */
  z-index: 500; /* ⬅️ ВЫШЕ ВСЕГО! (выше модалок z-index: 400) */
  box-shadow: var(--shadow-lg); /* Level 4 shadow - high elevation */
  /* Smooth transitions */
  transition: all var(--duration-normal) var(--ease-smooth),
              transform var(--duration-normal) var(--ease-emphasized);
  /* Initial state for animation */
  transform: translateY(100px);
  opacity: 0;
}

.context-toolbar--visible {
  display: flex;
  /* Animate in */
  transform: translateY(0);
  opacity: 1;
}

.context-toolbar:hover {
  box-shadow: var(--shadow-xl); /* Even deeper shadow on hover */
}

.context-toolbar__left {
  display: flex;
  align-items: center;
  gap: var(--space-4); /* 16px gap */
}

.context-toolbar__right {
  display: flex;
  align-items: center;
  gap: var(--space-2); /* 8px tight gap between action buttons */
}

.context-toolbar__separator {
  width: 1px;
  height: 28px; /* Taller separator */
  background-color: var(--color-border);
  margin: 0 var(--space-3); /* 12px margins */
  opacity: 0.5;
}

/* ==================== TRANSITIONS & ANIMATIONS ==================== */

/* Fade In Animation for Content Areas */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.content-area {
  animation: fadeIn 0.2s ease;
}

/* Smooth transitions for navigation */
.app-nav__item,
.sidebar__section,
.service-card,
.quick-action-card {
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Service Card Enhanced Hover */
.service-card {
  position: relative;
}

.service-card::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: var(--radius-xl); /* Match card radius */
  opacity: 0;
  transition: opacity var(--duration-normal) var(--ease-smooth);
  pointer-events: none;
  box-shadow: var(--shadow-primary); /* Colored primary shadow */
}

.service-card:hover::after {
  opacity: 0.4; /* Subtle glow effect */
}

/* Slide In Animation for Modals */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translate(-50%, -45%);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%);
  }
}

.modal-overlay--visible .template-dialog,
.modal-overlay--visible .template-browser,
.modal-overlay--visible .validation-panel {
  animation: slideInUp 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Pulse Animation for Loading States */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.loading-state {
  animation: pulse 1.5s ease-in-out infinite;
}

/* Smooth Accordion Expansion */
.accordion__content {
  transition: max-height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Sidebar Section Transitions */
.sidebar__section {
  opacity: 0;
  transition: opacity 0.2s ease;
}

.sidebar__section--active {
  opacity: 1;
}

/* Tab Bar Tab Transitions */
.tab-bar__tab {
  transform: translateY(0);
  transition: all 0.15s ease;
}

.tab-bar__tab:hover {
  transform: translateY(-2px);
}

/* ==================== LAYOUT ADJUSTMENTS FOR ACTIVITY BAR ==================== */
/* Убрать сдвиг если Activity Bar скрыт */
.activity-bar[style*="display: none"] ~ .sidebar {
  left: 0;
}

.activity-bar[style*="display: none"] ~ * .content {
  margin-left: var(--layout-sidebar-width); /* Only Sidebar when Activity Bar hidden */
}

/* ==================== LOADING STATES ==================== */

/* Spinner Animation */
.spinner-sm {
  display: inline-block;
  width: 14px;
  height: 14px;
  border: 2px solid currentColor;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
  vertical-align: middle;
  margin-right: 6px;
}

.spinner-md {
  width: 24px;
  height: 24px;
  border-width: 3px;
}

.spinner-lg {
  width: 48px;
  height: 48px;
  border-width: 4px;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Loading State Container */
.service-store__loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xxl);
  color: var(--color-text-secondary);
  font-size: var(--font-size-md);
  min-height: 300px;
}

.service-store__loading::before {
  content: '';
  width: 48px;
  height: 48px;
  border: 4px solid var(--color-border);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: var(--spacing-lg);
}

/* Error State Container */
.service-store__error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xxl);
  text-align: center;
  min-height: 300px;
  background-color: var(--color-surface);
  border-radius: var(--border-radius-lg);
  border: 1px solid var(--color-border);
}

.service-store__error-icon {
  font-size: 64px;
  margin-bottom: var(--spacing-lg);
  opacity: 0.5;
}

.service-store__error-message {
  font-size: var(--font-size-lg);
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-xl);
  max-width: 500px;
}

/* Empty State Container */
.service-store__empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xxl);
  text-align: center;
  min-height: 400px;
  color: var(--color-text-secondary);
}

.service-store__empty::before {
  content: '📦';
  font-size: 96px;
  margin-bottom: var(--spacing-xl);
  opacity: 0.3;
  display: block;
}

.service-store__empty-title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-md);
}

.service-store__empty-description {
  font-size: var(--font-size-base);
  max-width: 400px;
  line-height: 1.6;
}

/* ==================== BUTTON LOADING STATES ==================== */

/* Disabled button during loading */
button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

button[disabled] {
  pointer-events: none;
}

/* Button with spinner */
.btn--loading {
  position: relative;
  color: transparent !important;
  pointer-events: none;
}

.btn--loading::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16px;
  height: 16px;
  margin: -8px 0 0 -8px;
  border: 2px solid currentColor;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
  color: var(--color-text-inverse);
}

/* ==================== ENHANCED SERVICE CARD STATES ==================== */

/* Service card loading state */
.service-card--loading {
  pointer-events: none;
  opacity: 0.6;
  position: relative;
}

.service-card--loading::before {
  content: '';
  position: absolute;
  inset: 0;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(2px);
  border-radius: var(--border-radius-lg);
  z-index: 1;
}

/* Service card error state */
.service-card--error {
  border-color: var(--color-danger);
  background-color: rgba(239, 68, 68, 0.05);
}

/* Service card success state (brief flash after install) */
.service-card--success {
  animation: successFlash 0.6s ease;
}

@keyframes successFlash {
  0%, 100% {
    background-color: transparent;
  }
  50% {
    background-color: rgba(16, 185, 129, 0.1);
  }
}

/* ==================== STATUS BADGES ENHANCEMENT ==================== */

/* Active badge with pulse animation */
.service-card__badge--active {
  animation: badgePulse 2s ease-in-out infinite;
}

@keyframes badgePulse {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4);
  }
  50% {
    box-shadow: 0 0 0 4px rgba(16, 185, 129, 0);
  }
}

/* Installed badge */
.service-card__badge--installed {
  background-color: var(--color-text-tertiary);
  animation: none;
}

/* ==================== TOAST NOTIFICATION STYLES ==================== */

/* Toast container */
.toast-container {
  position: fixed;
  top: var(--spacing-xl);
  right: var(--spacing-xl);
  z-index: 9999;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
  pointer-events: none;
}

/* Individual toast */
.toast {
  background-color: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-md) var(--spacing-lg);
  box-shadow: var(--shadow-xl);
  min-width: 300px;
  max-width: 500px;
  animation: toastSlideIn 0.3s ease;
  pointer-events: auto;
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

@keyframes toastSlideIn {
  from {
    opacity: 0;
    transform: translateX(100px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Toast variants */
.toast--success {
  border-left: 4px solid var(--color-success);
}

.toast--error {
  border-left: 4px solid var(--color-danger);
}

.toast--info {
  border-left: 4px solid var(--color-info);
}

.toast--warning {
  border-left: 4px solid var(--color-warning);
}

/* Toast icon */
.toast__icon {
  font-size: 24px;
  flex-shrink: 0;
}

/* Toast content */
.toast__content {
  flex: 1;
  font-size: var(--font-size-sm);
  line-height: 1.5;
  color: var(--color-text-primary);
}

/* Toast close button */
.toast__close {
  background: none;
  border: none;
  color: var(--color-text-secondary);
  cursor: pointer;
  padding: var(--spacing-xs);
  font-size: 20px;
  line-height: 1;
  transition: var(--transition);
  flex-shrink: 0;
}

.toast__close:hover {
  color: var(--color-text-primary);
}

/* ==================== SKELETON LOADING STATES ==================== */

/* Skeleton for service cards while loading */
.service-card--skeleton {
  pointer-events: none;
}

.skeleton {
  background: linear-gradient(
    90deg,
    var(--color-bg-secondary) 25%,
    var(--color-bg-hover) 50%,
    var(--color-bg-secondary) 75%
  );
  background-size: 200% 100%;
  animation: skeletonLoading 1.5s ease-in-out infinite;
  border-radius: var(--border-radius);
}

@keyframes skeletonLoading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

.skeleton--circle {
  width: 48px;
  height: 48px;
  border-radius: 50%;
}

.skeleton--text {
  height: 16px;
  margin: var(--spacing-sm) 0;
  width: 100%;
}

.skeleton--text-short {
  width: 60%;
}

.skeleton--button {
  height: 36px;
  width: 100px;
}

