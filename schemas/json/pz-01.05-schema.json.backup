{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "pz-01.05-schema.json",
  "title": "Пояснительная записка v01.05",
  "description": "JSON Schema для создания XML пояснительных записок по стандарту Минстроя РФ версии 01.05 (актуальный с 29.03.2025)",
  "type": "object",
  "required": [
    "documentInfo",
    "basicInfo"
  ],
  "properties": {
    "documentInfo": {
      "type": "object",
      "title": "Информация о документе",
      "required": ["docType", "docVersion", "docDate"],
      "properties": {
        "docType": {
          "type": "string",
          "title": "Тип документа",
          "const": "PZ",
          "description": "Тип документа - Пояснительная записка"
        },
        "docVersion": {
          "type": "string",
          "title": "Версия схемы",
          "const": "01.05",
          "description": "Версия XML-схемы Минстроя"
        },
        "docDate": {
          "type": "string",
          "title": "Дата создания документа",
          "format": "date",
          "description": "Дата создания документа в формате YYYY-MM-DD"
        },
        "docNumber": {
          "type": "string",
          "title": "Номер документа",
          "description": "Регистрационный номер документа"
        }
      }
    },
    "basicInfo": {
      "type": "object",
      "title": "Раздел 1. Основная информация",
      "description": "Общие сведения о проекте",
      "required": ["projectName", "organizationName"],
      "properties": {
        "projectName": {
          "type": "string",
          "title": "Наименование проекта",
          "minLength": 1,
          "maxLength": 1000,
          "description": "Полное наименование объекта капитального строительства"
        },
        "projectAddress": {
          "type": "object",
          "title": "Адрес объекта",
          "properties": {
            "region": {
              "type": "string",
              "title": "Субъект РФ",
              "description": "Наименование субъекта Российской Федерации"
            },
            "city": {
              "type": "string",
              "title": "Населенный пункт",
              "description": "Город, поселок, село"
            },
            "street": {
              "type": "string",
              "title": "Улица"
            },
            "building": {
              "type": "string",
              "title": "Номер дома/строения"
            },
            "cadastralNumber": {
              "type": "string",
              "title": "Кадастровый номер",
              "pattern": "^\\d{2}:\\d{2}:\\d{6,7}:\\d+$",
              "description": "Кадастровый номер земельного участка"
            }
          }
        },
        "organizationName": {
          "type": "string",
          "title": "Заказчик",
          "description": "Наименование организации-заказчика"
        },
        "organizationINN": {
          "type": "string",
          "title": "ИНН заказчика",
          "pattern": "^(\\d{10}|\\d{12})$",
          "description": "ИНН организации (10 или 12 цифр)"
        },
        "organizationOGRN": {
          "type": "string",
          "title": "ОГРН заказчика",
          "pattern": "^\\d{13}$",
          "description": "ОГРН организации (13 цифр)"
        },
        "projectStage": {
          "type": "string",
          "title": "Стадия проектирования",
          "enum": ["П", "Р", "ПД"],
          "description": "П - Проект, Р - Рабочая документация, ПД - Проектная документация"
        },
        "projectType": {
          "type": "string",
          "title": "Тип объекта",
          "enum": [
            "Жилое здание",
            "Общественное здание",
            "Производственное здание",
            "Сооружение",
            "Линейный объект",
            "Иное"
          ],
          "description": "Функциональное назначение объекта"
        }
      }
    },
    "technicalData": {
      "type": "object",
      "title": "Раздел 2. Технико-экономические показатели",
      "description": "Основные технико-экономические показатели проекта",
      "properties": {
        "totalArea": {
          "type": "number",
          "title": "Общая площадь, м²",
          "minimum": 0,
          "description": "Общая площадь здания/сооружения"
        },
        "buildingVolume": {
          "type": "number",
          "title": "Строительный объем, м³",
          "minimum": 0,
          "description": "Строительный объем здания"
        },
        "floors": {
          "type": "integer",
          "title": "Количество этажей",
          "minimum": 1,
          "maximum": 200,
          "description": "Этажность здания (надземные этажи)"
        },
        "undergroundFloors": {
          "type": "integer",
          "title": "Количество подземных этажей",
          "minimum": 0,
          "maximum": 10,
          "description": "Количество подземных этажей"
        },
        "height": {
          "type": "number",
          "title": "Высота здания, м",
          "minimum": 0,
          "description": "Высота здания от уровня земли до верха парапета"
        },
        "capacity": {
          "type": "integer",
          "title": "Вместимость/количество мест",
          "minimum": 0,
          "description": "Количество посетителей, учащихся, рабочих мест и т.д."
        },
        "estimatedCost": {
          "type": "number",
          "title": "Сметная стоимость, руб.",
          "minimum": 0,
          "description": "Сметная стоимость строительства"
        }
      }
    },
    "engineering": {
      "type": "object",
      "title": "Раздел 3. Инженерные системы",
      "description": "Описание инженерных систем и сетей",
      "properties": {
        "waterSupply": {
          "type": "object",
          "title": "Водоснабжение",
          "properties": {
            "source": {
              "type": "string",
              "title": "Источник водоснабжения",
              "description": "Централизованное, автономное, и т.д."
            },
            "consumption": {
              "type": "number",
              "title": "Расход воды, м³/сут",
              "minimum": 0
            }
          }
        },
        "sewerage": {
          "type": "object",
          "title": "Канализация",
          "properties": {
            "type": {
              "type": "string",
              "title": "Тип канализации",
              "description": "Централизованная, автономная, и т.д."
            },
            "volume": {
              "type": "number",
              "title": "Объем стоков, м³/сут",
              "minimum": 0
            }
          }
        },
        "heating": {
          "type": "object",
          "title": "Отопление",
          "properties": {
            "type": {
              "type": "string",
              "title": "Тип системы отопления",
              "description": "Централизованное, автономное, и т.д."
            },
            "heatLoad": {
              "type": "number",
              "title": "Тепловая нагрузка, Гкал/ч",
              "minimum": 0
            }
          }
        },
        "ventilation": {
          "type": "object",
          "title": "Вентиляция",
          "properties": {
            "type": {
              "type": "string",
              "title": "Тип вентиляции",
              "enum": ["Естественная", "Механическая", "Смешанная"]
            },
            "airflow": {
              "type": "number",
              "title": "Воздухообмен, м³/ч",
              "minimum": 0
            }
          }
        },
        "electricity": {
          "type": "object",
          "title": "Электроснабжение",
          "properties": {
            "power": {
              "type": "number",
              "title": "Установленная мощность, кВт",
              "minimum": 0
            },
            "voltage": {
              "type": "string",
              "title": "Напряжение сети",
              "description": "220В, 380В, и т.д."
            }
          }
        }
      }
    },
    "participants": {
      "type": "object",
      "title": "Раздел 4. Сведения об участниках",
      "description": "Застройщик, проектировщик, ГИП, генподрядчик",
      "properties": {
        "customer": {
          "type": "object",
          "title": "Застройщик (заказчик)",
          "properties": {
            "name": {
              "type": "string",
              "title": "Наименование организации"
            },
            "inn": {
              "type": "string",
              "title": "ИНН",
              "pattern": "^(\\d{10}|\\d{12})$"
            },
            "ogrn": {
              "type": "string",
              "title": "ОГРН",
              "pattern": "^\\d{13}$"
            },
            "address": {
              "type": "string",
              "title": "Юридический адрес"
            },
            "phone": {
              "type": "string",
              "title": "Телефон"
            },
            "email": {
              "type": "string",
              "title": "Email",
              "format": "email"
            }
          }
        },
        "designer": {
          "type": "object",
          "title": "Проектная организация",
          "properties": {
            "name": {
              "type": "string",
              "title": "Наименование организации"
            },
            "inn": {
              "type": "string",
              "title": "ИНН",
              "pattern": "^(\\d{10}|\\d{12})$"
            },
            "sro": {
              "type": "string",
              "title": "Реестровый номер СРО"
            },
            "chiefEngineer": {
              "type": "object",
              "title": "ГИП (главный инженер проекта)",
              "properties": {
                "fullName": {
                  "type": "string",
                  "title": "ФИО"
                },
                "position": {
                  "type": "string",
                  "title": "Должность"
                },
                "qualification": {
                  "type": "string",
                  "title": "Квалификационный аттестат"
                }
              }
            }
          }
        },
        "contractor": {
          "type": "object",
          "title": "Генподрядчик (опционально)",
          "properties": {
            "name": {
              "type": "string",
              "title": "Наименование организации"
            },
            "inn": {
              "type": "string",
              "title": "ИНН",
              "pattern": "^(\\d{10}|\\d{12})$"
            }
          }
        }
      }
    },
    "landPlot": {
      "type": "object",
      "title": "Раздел 5. Сведения о земельном участке",
      "description": "Кадастровый номер, площадь, категория земель",
      "properties": {
        "cadastralNumber": {
          "type": "string",
          "title": "Кадастровый номер",
          "pattern": "^\\d{2}:\\d{2}:\\d{6,7}:\\d+$"
        },
        "area": {
          "type": "number",
          "title": "Площадь участка, га",
          "minimum": 0
        },
        "category": {
          "type": "string",
          "title": "Категория земель",
          "enum": [
            "Земли населенных пунктов",
            "Земли промышленности",
            "Земли сельскохозяйственного назначения",
            "Земли особо охраняемых территорий",
            "Земли лесного фонда",
            "Земли водного фонда",
            "Земли запаса"
          ]
        },
        "permittedUse": {
          "type": "string",
          "title": "Вид разрешенного использования"
        },
        "ownershipDocuments": {
          "type": "string",
          "title": "Правоустанавливающие документы",
          "description": "Реквизиты документов на право собственности/аренды"
        }
      }
    },
    "materials": {
      "type": "object",
      "title": "Раздел 6. Строительные материалы",
      "description": "Основные строительные материалы и конструкции",
      "properties": {
        "foundation": {
          "type": "string",
          "title": "Тип фундамента",
          "description": "Свайный, ленточный, плитный, и т.д."
        },
        "walls": {
          "type": "string",
          "title": "Материал стен",
          "description": "Кирпич, бетон, каркас, и т.д."
        },
        "roof": {
          "type": "string",
          "title": "Тип кровли",
          "description": "Плоская, скатная, и т.д."
        },
        "roofMaterial": {
          "type": "string",
          "title": "Материал кровли",
          "description": "Металлочерепица, профнастил, и т.д."
        },
        "facade": {
          "type": "string",
          "title": "Отделка фасада",
          "description": "Штукатурка, облицовка, и т.д."
        }
      }
    },
    "engineeringSurveys": {
      "type": "object",
      "title": "Раздел 7. Сведения об инженерных изысканиях",
      "description": "Организации-изыскатели, виды изысканий, отчёты",
      "properties": {
        "surveyOrganization": {
          "type": "string",
          "title": "Организация-изыскатель"
        },
        "surveyTypes": {
          "type": "array",
          "title": "Виды изысканий",
          "items": {
            "type": "string",
            "enum": [
              "Инженерно-геодезические",
              "Инженерно-геологические",
              "Инженерно-гидрометеорологические",
              "Инженерно-экологические"
            ]
          }
        },
        "reports": {
          "type": "string",
          "title": "Реквизиты отчётов по изысканиям"
        }
      }
    },
    "designTask": {
      "type": "object",
      "title": "Раздел 8. Сведения о задании на проектирование",
      "description": "Номер, дата, утвердивший, основание",
      "properties": {
        "documentNumber": {
          "type": "string",
          "title": "Номер документа"
        },
        "documentDate": {
          "type": "string",
          "title": "Дата документа",
          "format": "date"
        },
        "approvedBy": {
          "type": "string",
          "title": "Кто утвердил"
        },
        "basis": {
          "type": "string",
          "title": "Основание для проектирования"
        }
      }
    },
    "planningDocumentation": {
      "type": "object",
      "title": "Раздел 9. Документация по планировке территории",
      "description": "Проект планировки, межевания, ГПЗУ",
      "properties": {
        "territoryPlanningProject": {
          "type": "string",
          "title": "Проект планировки территории",
          "description": "Реквизиты документа"
        },
        "landSurveyProject": {
          "type": "string",
          "title": "Проект межевания территории"
        },
        "gpzu": {
          "type": "string",
          "title": "ГПЗУ (градостроительный план земельного участка)"
        }
      }
    },
    "architectural": {
      "type": "object",
      "title": "Раздел 10. Архитектурные решения",
      "description": "Архитектурно-планировочные и объемно-пространственные решения",
      "properties": {
        "planningConcept": {
          "type": "richtext",
          "title": "Архитектурная концепция",
          "description": "Описание архитектурно-планировочного решения"
        },
        "layoutDescription": {
          "type": "richtext",
          "title": "Планировочные решения",
          "description": "Описание планировочных решений здания"
        },
        "facadeDescription": {
          "type": "richtext",
          "title": "Решения по фасадам",
          "description": "Архитектурные решения по фасадам здания"
        },
        "colorScheme": {
          "type": "string",
          "title": "Цветовое решение",
          "description": "Колористическое решение фасадов"
        }
      }
    },
    "structural": {
      "type": "object",
      "title": "Раздел 11. Конструктивные решения",
      "description": "Конструктивные и объемно-планировочные решения",
      "properties": {
        "structuralSystem": {
          "type": "string",
          "title": "Конструктивная система",
          "enum": ["Каркасная", "Бескаркасная", "Смешанная"],
          "description": "Тип конструктивной системы здания"
        },
        "foundationDescription": {
          "type": "richtext",
          "title": "Описание фундамента",
          "description": "Решения по основаниям и фундаментам"
        },
        "structuralElements": {
          "type": "richtext",
          "title": "Несущие конструкции",
          "description": "Описание несущих конструкций (стены, колонны, перекрытия, покрытия)"
        },
        "seismicProtection": {
          "type": "string",
          "title": "Сейсмостойкость",
          "description": "Сейсмичность района и мероприятия по сейсмозащите"
        }
      }
    },
    "fireSafety": {
      "type": "object",
      "title": "Раздел 12. Пожарная безопасность",
      "description": "Мероприятия по обеспечению пожарной безопасности",
      "properties": {
        "fireResistance": {
          "type": "string",
          "title": "Степень огнестойкости",
          "enum": ["I", "II", "III", "IV", "V"],
          "description": "Степень огнестойкости здания"
        },
        "functionalFireHazard": {
          "type": "string",
          "title": "Класс функциональной пожарной опасности",
          "description": "Класс Ф1, Ф2, Ф3, Ф4, Ф5 согласно СП 2.13130"
        },
        "fireProtectionSystems": {
          "type": "richtext",
          "title": "Системы противопожарной защиты",
          "description": "АПС, СОУЭ, системы пожаротушения, противодымная вентиляция"
        },
        "evacuationRoutes": {
          "type": "richtext",
          "title": "Пути эвакуации",
          "description": "Описание путей эвакуации и эвакуационных выходов"
        }
      }
    },
    "accessibility": {
      "type": "object",
      "title": "Раздел 13. Доступность для маломобильных групп населения (МГН)",
      "description": "Мероприятия по обеспечению доступности для инвалидов и МГН",
      "properties": {
        "accessibilityLevel": {
          "type": "string",
          "title": "Уровень доступности",
          "enum": ["Полная доступность (А)", "Избирательная доступность (Б)", "Временная доступность (ДУ)", "Недоступен (Н)"],
          "description": "Уровень доступности согласно СП 59.13330"
        },
        "entranceAccessibility": {
          "type": "richtext",
          "title": "Доступность входов",
          "description": "Пандусы, подъемники, доступные входы"
        },
        "verticalCommunication": {
          "type": "richtext",
          "title": "Вертикальные коммуникации",
          "description": "Лифты, подъемники для МГН"
        },
        "facilities": {
          "type": "richtext",
          "title": "Специализированные помещения",
          "description": "Санузлы, парковки и иные помещения для МГН"
        }
      }
    },
    "energyEfficiency": {
      "type": "object",
      "title": "Раздел 14. Энергоэффективность и энергосбережение",
      "description": "Мероприятия по обеспечению энергетической эффективности",
      "properties": {
        "energyClass": {
          "type": "string",
          "title": "Класс энергетической эффективности",
          "enum": ["A++", "A+", "A", "B", "C", "D", "E"],
          "description": "Класс энергоэффективности здания"
        },
        "heatLosses": {
          "type": "number",
          "title": "Удельный расход тепловой энергии, кВт·ч/(м²·год)",
          "minimum": 0,
          "description": "Удельный расход тепловой энергии на отопление и вентиляцию"
        },
        "thermalInsulation": {
          "type": "richtext",
          "title": "Теплозащита ограждающих конструкций",
          "description": "Мероприятия по теплоизоляции стен, покрытий, окон"
        },
        "renewableEnergy": {
          "type": "richtext",
          "title": "Возобновляемые источники энергии",
          "description": "Использование солнечных панелей, тепловых насосов и т.д."
        }
      }
    },
    "environmental": {
      "type": "object",
      "title": "Раздел 15. Охрана окружающей среды",
      "description": "Мероприятия по охране окружающей среды",
      "properties": {
        "wasteManagement": {
          "type": "richtext",
          "title": "Обращение с отходами",
          "description": "Система сбора, хранения и утилизации отходов"
        },
        "waterProtection": {
          "type": "richtext",
          "title": "Охрана водных ресурсов",
          "description": "Очистка сточных вод, ливневой канализации"
        },
        "airProtection": {
          "type": "richtext",
          "title": "Охрана атмосферного воздуха",
          "description": "Мероприятия по снижению выбросов загрязняющих веществ"
        },
        "noiseProtection": {
          "type": "richtext",
          "title": "Защита от шума",
          "description": "Шумозащитные мероприятия"
        },
        "landscaping": {
          "type": "richtext",
